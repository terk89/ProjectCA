@page
@model ProjectCA.Pages.Instruments.EditModel
@{
    ViewData["Title"] = "Edit Equipment";
}

<h2>Edit Equipment</h2>

<form method="post">
    <div class="form-group">
        <label for="EquipmentItem_CatNumber">Cat Number</label>
        <input type="text" class="form-control" id="EquipmentItem_CatNumber" name="EquipmentItem.CatNumber" value="@Model.EquipmentItem.CatNumber" />
    </div>

    <div class="form-group">
        <label for="EquipmentItem_SerialNumber">Serial Number</label>
        <input type="text" class="form-control" id="EquipmentItem_SerialNumber" name="EquipmentItem.SerialNumber" value="@Model.EquipmentItem.SerialNumber" />
    </div>

    <div class="form-group">
        <label for="EquipmentItem_CalibrationDue">Calibration Due</label>
        <input type="date" class="form-control" id="EquipmentItem_CalibrationDue" name="EquipmentItem.CalibrationDue" value="@Model.EquipmentItem.CalibrationDue.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="EquipmentItem_Status">Status</label>
        @Html.DropDownListFor(
        model => model.EquipmentItem.Status,
        (SelectList)ViewData["Status"],
        new { @class = "form-control", id = "EquipmentItem_Status" })
    </div>

    <div class="form-group">
        <label for="EquipmentItem_UserID">User</label>
        @Html.DropDownListFor(
        model => model.EquipmentItem.UserID,
        (SelectList)ViewData["UserID"],
        new { @class = "form-control", id = "EquipmentItem_UserID" })
    </div>

    <div class="form-group">
        <label for="EquipmentItem_InstrumentTypeID">Instrument Type</label>
        @Html.DropDownListFor(
        model => model.EquipmentItem.InstrumentTypeID,
        (SelectList)ViewData["InstrumentTypeID"],
        new { @class = "form-control", id = "EquipmentItem_InstrumentTypeID" })
    </div>

    <div class="form-group">
        <label for="EquipmentItem_ManufacturerID">Manufacturer</label>
        @Html.DropDownListFor(
        model => model.EquipmentItem.ManufacturerID,
        (SelectList)ViewData["ManufacturerID"],
        new { @class = "form-control", id = "EquipmentItem_ManufacturerID" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Page("./Index")" class="btn btn-secondary">Cancel</a>
}
